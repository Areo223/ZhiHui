<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.areo.zhihui.mapper.CourseMapper">
    <select id="listTeacherCourse" resultType="org.areo.zhihui.pojo.entity.Course">
        select *
        from course
        where teacher_id = #{teacherId};
    </select>
</mapper>